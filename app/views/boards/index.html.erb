<nav class="navbar navbar-default" data-bind="visible: user.id() != null">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">task-board</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li><button type="button" data-toggle="modal" data-target="#boardModal" class="btn btn-default navbar-btn">Add a board</button></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><!-- ko text: user.nickname--><!--/ko--> <span class="caret"></span></a>
